#!/bin/sh

cd /tmp

sudo apt-get -y install check libc-ares-dev make gcc libssl-dev g++ \
    autoconf automake libtool flex bison

# libconfig
git clone https://github.com/hyperrealm/libconfig.git
cd libconfig
aclocal
autoconf
automake
./configure
make
sudo make install

# cmocker
git clone https://github.com/safchain/cmocker.git
cd cmocker
./configure
make
sudo make install

# mosquitto
git clone http://git.eclipse.org/gitroot/mosquitto/org.eclipse.mosquitto.git
cd org.eclipse.mosquitto/lib
make
sudo make install

# wiringPI
git clone git://git.drogon.net/wiringPi
cd wiringPi
# using this version, prior to the platform check
git checkout d42e831089c9d15d229fc475d84dee9456527b42
./build
sudo ldconfig
